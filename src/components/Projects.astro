---
import projects from "../utils/projects.json";
import ProjectCard from "./ProjectCard.astro";

---
<section class="flex-col justify-center items-center">
<h2 class="text-center text-3xl p-9"><section class="py-2 flex text-5xl justify-center row-auto items-center text-center bg-clip-text bg-gradient-to-r text-transparent from-sky-700 to-sky-100 font-bold">Mis Proyectos</section></h2>
<div class="grid-cols-2 gap-6 grid ">
  {
    projects.map((project) => (
    <ProjectCard 
    title={project.title}
    description={project.description}
    code={project.code}
    thumbnail={project.thumbnail}
    link={project.link}
    /> 
    ))
  }
</div>

</section>